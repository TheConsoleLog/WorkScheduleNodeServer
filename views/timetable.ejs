<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Timetable</title>
  <link rel="stylesheet" href="/css/timetable.css">
</head>
<body>
  <h1>Timetable</h1>
  <h2><%= type %></h2>
  <main>
    <div class="days">
      <% days.forEach(day => { %>
        <% let className = (day.canWork ? 'active' : 'nonactive'); %>
        <form action="/clicked-day/<%= day.display.toString() %>" method="post">
          <div class="day <%= className %>">
            <input type="hidden" name="realDate" value="<%= day.real %>">
            <input type="submit" name="<%= day.display %>" value="<%= day.display %>">
          </div>
        </form>
      <% }) %>
    </div>
    <form action="/save-remark" method="POST">
      <textarea id="remark" name="remark">
        <%= remark %>
      </textarea>
      <input type="submit" name="submit" value="save remark">
    </form>
  </main>
</body>
</html>